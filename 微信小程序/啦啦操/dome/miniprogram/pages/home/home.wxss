/* pages/home/home.wxss */
.home {
  background-color: #3ba63e;
}


.home_content {
  padding-left: 4vw;
  padding-right: 4vw;
}

.from {
  padding-left: 5vw;
  padding-right: 5vw;
  border-radius: 5vw;
  background-color: #ffffff;
}

.from .reminder {
  color: #d50c14;
  font-size: 25rpx;
  text-align: center;
  height: 5vw;
  line-height: 8vw;
  margin-bottom: 20rpx;
}

.from .query_log {
  text-align: center;
  color: #2194d3;
  font-size: 25rpx;
  height: 15vw;
  line-height: 15vw;
  opacity: 0;
}

.from button {
  border: none;
  background-color: #09ba07;
  border-radius: 10vw;
  color: #fff;
  font-size: 25rpx;
  height: 12vw;
  line-height: 8vw;
}

.from .nav {
  font-size: 30rpx;
  font-weight: 700;
  height: 13vw;
  line-height: 12vw;
}

.from .hint {
  font-size: 25rpx;
  color: rgb(34, 33, 33);
  height: 5vw;
  line-height: 5vw;
}

.from .select {
  display: flex;
  justify-content: space-between;
}

