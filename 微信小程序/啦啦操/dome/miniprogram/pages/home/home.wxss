.from .select .son {
  border: 1px solid #dddddd;
  background-color: #fafafa;
  height: 15vw;
  line-height: 15vw;
  border-radius: 2vw;
  margin: 0;
  font-size: 30rpx;
  width: 48%;
  text-align: center;
  text-align-last: center;
  display: flex;
  justify-content: space-between;
}

.from input {
  font-size: 30rpx;
  text-align: center;
  height: 10vw;
  border-radius: 2vw;
  border: 1px solid #dddddd;
  background-color: #fafafa;
}

.activity_rules {
  font-size: 25rpx;
  color: #ffffff;
  position: relative;
}

.activity_rules .content {
  position: relative;
  top: 0;
  z-index: 10;
  padding-bottom: 15vw;
  padding-left: 5vw;
  padding-right: 5vw;
  line-height: 7vw;
}

.activity_rules .home_bottom {
  position: absolute;
  bottom: 0;
  z-index: 9;
}

.home_cal{
  width: 100%;
  height: 8vw;
  margin-top: 2vw;
  margin-bottom: 2vw;
}
.home_bottom{
  width: 100%;
}

.home_top{
  width: 100%;
}